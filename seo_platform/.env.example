# ============================================================
# SEO & AI Monitoring Platform - Environment Variables
# Common Notary Apostille
# ============================================================
# Copy this file to .env and fill in your actual values
# ============================================================

# Database (SQLite default, switch to PostgreSQL for production)
# DATABASE_URL=sqlite:///data/seo_platform.db
# DATABASE_URL=postgresql://user:password@localhost:5432/seo_platform

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Google APIs
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here
GOOGLE_SEARCH_CONSOLE_CREDENTIALS=path/to/service_account.json
GOOGLE_BUSINESS_PROFILE_CREDENTIALS=path/to/gbp_credentials.json
PAGESPEED_API_KEY=your_pagespeed_api_key_here

# AI APIs
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# SEO Tool APIs (optional - free alternatives used as fallback)
AHREFS_API_KEY=your_ahrefs_api_key_here
SEMRUSH_API_KEY=your_semrush_api_key_here

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
REPORT_RECIPIENTS=owner@commonnotaryapostille.com

# Company Information
COMPANY_PHONE=(555) 123-4567
COMPANY_EMAIL=info@commonnotaryapostille.com
COMPANY_STREET=123 Main Street
COMPANY_ZIP=22314

# Logging
LOG_LEVEL=INFO
